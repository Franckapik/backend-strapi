{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "singularName": "question",
    "pluralName": "questions",
    "displayName": "question"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "choix simple",
        "choix multiple",
        "texte"
      ]
    },
    "niveau": {
      "type": "integer",
      "min": 0,
      "max": 5
    },
    "score": {
      "type": "integer"
    },
    "contenu": {
      "type": "text"
    },
    "reponses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::reponse.reponse",
      "mappedBy": "question"
    },
    "exercice": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::exercice.exercice",
      "inversedBy": "questions"
    }
  }
}
